{
    "compilerOptions": {
      "target": "es2017",                                
      "module": "commonjs",                           
      "lib": ["es6"],                                  
      "allowJs": true,                            
      "outDir": "./dist",                              
      "rootDir": "./src",                         
      "removeComments": true,                     
      "strictPropertyInitialization": false,       
      "typeRoots": [
        "./node_modules/@types"
      ],                           
      "esModuleInterop": true,                       
      "experimentalDecorators": true,              
      "emitDecoratorMetadata": true,               
      "skipLibCheck": true,                          
      "forceConsistentCasingInFileNames": true       
    }
  }